<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.RecyclerView android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="12dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight=".45"
            android:id="@+id/btn_show_online"
            android:text="Shop Online"
            android:textColor="#ffffff"
            android:background="@drawable/button_background"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="left"
            android:layout_marginLeft="9dp"
            android:layout_below="@id/cellphone_number"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:enabled="false"




            />
        <View android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight=".2"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight=".45"
            android:id="@+id/btn_see_store"
            android:text="View Store"
            android:textColor="#ffffff"
            android:background="@drawable/button_background"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="right"
            android:layout_marginRight="9dp"
            android:textSize="12sp"




            />



    </LinearLayout>
</RelativeLayout>
